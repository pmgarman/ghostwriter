{{!< default}}
<div class="container">
    {{#post}}
        <article class="{{post_class}}">
            <header class="post-header">
                <h1 class="post-title">{{title}}</h1>
                <div class="post-meta">
                    <p class="post-date"><time datetime="{{published_at}}">Published {{date format="MMMM Do YYYY"}}</time></p>
                    <p class="post-author">By: <a href="{{author.website}}?rel=author">{{author.name}}</a> <a href="mailto:{{author.email}}"><i class="icon-envelope"></i></a></p>
                </div>
            </header>
            <div class="post-content">
                {{{content}}}
            </div>
        </article>
    {{/post}}
</div>